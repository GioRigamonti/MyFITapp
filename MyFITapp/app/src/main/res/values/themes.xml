<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFITapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor_blue</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor_blue</item>
        <item name="colorOnPrimary">@color/primaryTextColor_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor_cobalto</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor_cobalto</item>
        <item name="colorOnSecondary">@color/primaryTextColor_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyFITapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyFITapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyFITapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="HomeTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_omini_senza_sfondo</item>
    </style>
</resources>